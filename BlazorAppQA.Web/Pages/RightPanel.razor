@inherits RightPanelComponent

<div class="card mb-3">
    <h3 class="card-header">Welcome</h3>
    <div class="card-body">
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body" style="font-size:15px;">
        <div style="width:50%;float:left;text-align:center;">
            <b>QUESTIONS: @TotalQuestions.ToString("D3")</b>
        </div>
        <div style="width:50%;float:right;text-align:center;">
            <b>ANSWERS: @TotalAnswers.ToString("D3")</b>
        </div>
    </div>
</div>

<div class="card mb-3">
    <h3 class="card-header">User rankings</h3>
    @if (TopUsersList != null)
    {
        <ol class="list-group list-group-flush">
            @for (var i = 0; i < TopUsersList.Count(); i++)
            {
                var index = i + 1;
                dynamic user = TopUsersList.ElementAt(i);
                <li class="list-group-item d-flex justify-content-between align-items-center" style="border-bottom:none;padding-top:5px;padding-bottom:5px;" @key="@user.ProtectedId">
                    <a href="/users/@user.ProtectedId" class="text-primary">@($"{index})") @user.UserName</a>
                    <span class="badge badge-secondary">SOLVED: @user.AnswersProvided.ToString("D2")</span>
                </li>
            }
        </ol>
    }
    else
    {
        <div class="card-body">
            <small>NO DATA AVAILABLE</small>
        </div>
    }
</div>
